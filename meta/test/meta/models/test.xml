<?xml version="1.0"?>
<configuration>
    <models package="models.response">
        <model name="Response">
            <properties>
                <property name="item"/>
                <property name="items"/>
                <property name="error" type="response.Error"/>
                <property name="errors" type="response.Errors"/>
            </properties>
        </model>
        <model name="Error">
            <properties>
                <property name="code" type="int"/>
                <property name="message" type="string"/>
            </properties>
        </model>
    </models>
    <models package="models.some">
        <model name="User" source="main">
            <properties>
                <identifier/>
                <property name="email" type="string" size="64" required="true"/>
                <property name="password" type="string" size="32" required="true"/>
                <property name="role" type="some.UserRole" required="true" relation="OneToOne"/>
                <property name="registerDate" type="time.Time" required="false"/>
            </properties>
            <pattern name="StraightMapping"/>
        </model>
        <model name="SomeUser">
            <extends>
                <extend>some.User</extend>
            </extends>
            <properties>
                <identifier type="int64"/>
                <property name="test" type="string" required="true"/>
                <property name="enum" type="some.SomeEnum" required="true" relation="OneToMany"/>
            </properties>
            <pattern name="StraightMapping"/>
        </model>
        <enum name="UserRole">
            <constants>
                <constant name="LoggedUserRole">Пользователь</constant>
                <constant name="LoggedAdminRole">Администратор</constant>
            </constants>
        </enum>
        <enum name="SomeEnum" type="int64">
            <constants>
                <constant name="SomeEnum1" value="99">SomeEnum1</constant>
                <constant name="SomeEnum2">SomeEnum2</constant>
            </constants>
        </enum>
        <enum name="SomeEnum2" type="string">
            <constants>
                <constant name="SomeEnum21" value="some-value">SomeEnum1</constant>
                <constant name="SomeEnum22">SomeEnum2</constant>
            </constants>
        </enum>
    </models>
</configuration>
